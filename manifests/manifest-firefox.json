{
  "manifest_version": 3,
  "name": "Vault",
  "default_locale": "en",
  "description": "A Firefox extension for managing and searching secrets in Hashicorp Vault",
  "version": "1.8.0",
  "action": {
    "default_icon": "icons/logo128.png",
    "default_popup": "html/navigate.html",
    "default_title": "Vault"
  },
  "icons": {
    "48": "icons/logo48.png",
    "128": "icons/logo128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/browser-polyfill.min.js","lib/navigate.js","lib/common.js","lib/vault.js"]
    }
  ],
  "background":{
    "scripts": ["background.js"]
  },
  "permissions": [
    "activeTab",
    "storage",
    "clipboardWrite",
    "idle",
    "alarms",
    "scripting"
  ],
  "host_permissions" : [
    "http://*/*",
    "https://*/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{5c0a7aa2-3e6b-46f4-a7f5-fdbfa454f3ac}"
    }
  }
}
